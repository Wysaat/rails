<% provide(:title, 'Home') %>

<% if signed_in? %>
  <div class="row">
  	<aside class="span4">
  		<section>
  			<%= render 'shared/user_info' %>
  		</section>
      <section>
        <%= render 'shared/stats' %>
      </section>
  		<section>
  			<%= render 'shared/micropost_form' %>
  		</section>
  	</aside>
    <div class="span8">
      <h3>Micropost feed!</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>

<% else %>
  <h1>Home Page</h1>
  <div class="center hero-unit">
    <h1>This is the home page</h1>
    <%= link_to "Sign up now", signup_path, class: "btn btn-large btn-primary" %>
  </div>
<% end %>